# remove from airootfs!
[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = linux-lily

[Action]
Description = Renaming linux-lily to linux...
When = PostTransaction
Depends = linux-lily
Exec = /usr/bin/sh -c 'mv -v /boot/vmlinuz-linux-lily /boot/vmlinuz-linux; mv -v /boot/initramfs-linux-lily.img /boot/initramfs-linux.img'
